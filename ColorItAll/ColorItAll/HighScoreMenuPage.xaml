<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColorItAll.HighScoreMenuPage"
            BackgroundColor="LightGoldenrodYellow">
    <StackLayout Spacing="4">
        <Label Text="Show highscore"
               TextColor="DarkRed"
               FontSize="36"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="Center" />
        <StackLayout VerticalOptions="CenterAndExpand"
                     HorizontalOptions="Center">
            <Button AutomationId="Easy" Text="Easy" BackgroundColor="ForestGreen" Clicked="HighScore_OnClicked"/>
            <Button AutomationId="Normal" Text="Normal" BackgroundColor="Gold" Clicked="HighScore_OnClicked"/>
            <Button AutomationId="Hard" Text="Hard" BackgroundColor="Crimson" Clicked="HighScore_OnClicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>